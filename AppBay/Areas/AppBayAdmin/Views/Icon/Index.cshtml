@model List<Icon>
<div>
    <div>
        <a asp-controller="Icon" asp-action="Create" class="btn btn-success my-4" style="width:20%; ">Create Icon</a>
    </div>
    <style>
    table, th, td {
    border:1px solid black;
    }
    </style>

        <table style="width:100%">
            <tr>
                <th>Id</th>
                <th>IconImage</th>
                <th>Title</th>
                <th>Subtitle</th>
                <th>Settings</th>
            </tr>

        <tbody>
            @foreach (Icon icon in Model)
            {
                <tr>
                    <td>@icon.Id</td>
                    <td>@icon.IconImage</td>
                    <td>@icon.Title</td>
                    <td>
                        @if (icon.Subtitle.Length >= 30)
                        {
                            @(icon.Subtitle.Substring(0, 30).ToString() + "...");
                        }
                        else
                        {
                            @icon.Subtitle
                        }
                    </td>
                    <td>
                        <div class="d-flex">
                            <div>
                                <a asp-controller="Icon" asp-action="Detail" asp-route-id="@icon.Id" class="btn btn-primary"><i class="fa-solid fa-info"></i></a>
                            </div>
                            <div>
                                <a asp-controller="Icon" asp-action="Delete" asp-route-id="@icon.Id" class="btn btn-danger"><i class="fa-regular fa-trash-can"></i></a>
                            </div>
                            <div>
                                <a asp-controller="Icon" asp-action="Edit" asp-route-id="@icon.Id" class="btn btn-success"><i class="fa-regular fa-pen-to-square"></i></a>
                            </div>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
        </table>
</div>